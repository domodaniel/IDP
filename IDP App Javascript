var skip_lines = function(a){
    for(i = 0; i < a; i++){
        console.log("");
    }
};
var printIngredients = function(ingredients){
    for(var i in ingredients) {
        console.log("-" + ingredients[i]);
    }
};
function foodMaker(name,calories,ingredients,fat){
    this.name = name;
    this.calories = calories;
    this.ingredients = ingredients;
    food.push(this);
    this.fat = fat;
}
function printInfo(object){
    console.log(object.name);
    console.log("-----------");
    console.log("Calories: " + object.calories);
    console.log("Ingredients:");
    printIngredients(object.ingredients);
}

