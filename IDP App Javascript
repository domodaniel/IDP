var skip_lines = function(a){
    for(i = 0; i < a; i++){
        console.log("");
    }
};
var printIngredients = function(ingredients){
    for(i = 0; i < ingredients.length; i++) {
        console.log(ingredients[i]);
    }
};
function foodMaker(name,calories,ingredients){
    this.name = name;
    this.calories = calories;
    this.ingredients = ingredients;
    food.push(this);
    this.print_Ingredients = printIngredients(ingredients);
}

